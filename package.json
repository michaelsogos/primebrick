{
    "name": "primebrick-core",
    "version": "0.1.0",
    "description": "Primebrick Core",
    "author": "Michael Sogos",
    "private": true,
    "license": "MIT",
    "engines": {
        "node": ">=14.12.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,json}\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:create": "typeorm migration:generate -n core-entities",
        "migration:run": "typeorm migration:run",
        "update:packages": "yarn install",
        "update:sdk": "yarn add -E primebrick-sdk"
    },
    "dependencies": {
        "@nestjs/common": "7.5.1",
        "@nestjs/config": "0.5.0",
        "@nestjs/core": "7.5.1",
        "@nestjs/microservices": "7.5.1",
        "@nestjs/platform-express": "7.5.1",
        "@nestjs/typeorm": "7.1.4",
        "connect-timeout": "1.9.0",
        "nest-schedule": "0.6.4",
        "pg": "8.5.0",
        "primebrick-commons-core": "0.3.0",
        "primebrick-sdk": "0.131.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "6.6.3",
        "typeorm": "0.2.29"
    },
    "devDependencies": {
        "@nestjs/cli": "7.5.3",
        "@nestjs/schematics": "7.2.2",
        "@nestjs/testing": "7.4.4",
        "@types/express": "4.17.7",
        "@types/jest": "26.0.14",
        "@types/node": "14.11.0",
        "@types/supertest": "2.0.10",
        "@typescript-eslint/eslint-plugin": "4.7.0",
        "@typescript-eslint/parser": "4.7.0",
        "eslint": "7.13.0",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-import": "2.22.1",
        "jest": "26.4.2",
        "prettier": "2.1.2",
        "supertest": "4.0.2",
        "ts-jest": "26.3.0",
        "ts-loader": "8.0.3",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typescript": "4.0.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            ".+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
