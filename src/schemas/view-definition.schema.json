{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://primebrick-sdk/view-definition.schema.json",
    "title": "ViewDefinition",
    "description": "The view definition model",
    "type": "object",
    "properties": {
        "$schema": {
            "description": "JSON Schema URL or path",
            "type": "string"
        },
        "version": {
            "description": "Definition version",
            "type": "string"
        },
        "name": {
            "description": "View name",
            "type": "string"
        },
        "labelKey": {
            "description": "View title translatable key",
            "type": "string"
        },
        "icon": {
            "description": "View icon",
            "type": "string"
        },
        "color": {
            "description": "View main color",
            "type": "string"
        },
        "alternativeViews": {
            "description": "List of alternative views",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "View name",
                        "type": "string"
                    },
                    "type": {
                        "description": "View type",
                        "type": "string",
                        "enum": ["grid", "form", "cards"]
                    }
                },
                "required": ["name", "type"],
                "additionalProperties": false
            }
        },
        "definition": {
            "description": "View definition",
            "type": "object",
            "properties": {
                "entity": {
                    "description": "Entity name",
                    "type": "string"
                },
                "type": {
                    "description": "View type",
                    "type": "string",
                    "enum": ["grid", "form", "cards"]
                },
                "fields": {
                    "description": "List of fields to show",
                    "minItems": 1,
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "description": "Field name",
                                "type": "string"
                            },
                            "labelKey": {
                                "description": "Field label translatable key",
                                "type": "string"
                            },
                            "perms": {
                                "description": "List of permission needed to access to this field",
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": ["name", "labelKey"],
                        "additionalProperties": false
                    }
                },
                "filters": {
                    "description": "List of filters to apply",
                    "minItems": 1,
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "leftOperator": {
                                "description": "Logical operator AND/OR before the expression block",
                                "type": "string",
                                "enum": ["AND", "OR"],
                                "default": "AND"
                            },
                            "expressionOperator": {
                                "description": "Logical operator AND/OR between expression values",
                                "type": "string",
                                "enum": ["AND", "OR"],
                                "default": "AND"
                            },
                            "expressions": {
                                "description": "Array of conditions to apply",
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": ["expressions"],
                        "additionalProperties": false
                    }
                },
                "perms": {
                    "description": "List of permission needed to access to this view",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": ["entity", "type", "fields"],
            "additionalProperties": false
        }
    },
    "required": ["name", "labelKey", "definition"],
    "additionalProperties": false
}
